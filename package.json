  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "ajv": "^8.6.3",
    "ajv-formats": "^2.1.1",
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
